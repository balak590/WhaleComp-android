<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WalletFragment.StratergyScreens.StrategyInfoActivity">
    <com.github.sshadkany.shapes.CircleView
        android:id="@+id/backButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shape_circle_radius="4dp"
        app:shape_circle_shadow_position_y="4dp"
        app:shape_circle_shadow_position_x="4dp"
        app:shape_circle_dark_color="@color/dark_shadow"
        app:shape_circle_light_color="@color/light_shadow"
        app:shape_circle_borderColor="#ECF0F3"
        app:shape_circle_borderWidth="1dp"
        app:shape_circle_backgroundColor="@color/background_color"
        app:shape_circle_shadow_type="drop_shadow">
        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_gravity="center"
            android:src="@drawable/back_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </com.github.sshadkany.shapes.CircleView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/backButton">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EPS收益峰值策略"
                    android:textSize="@dimen/heading_text"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/green_box"
                        android:scaleType="fitXY"
                        android:layout_centerInParent="true"
                        android:adjustViewBounds="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PR3"
                        android:textSize="@dimen/xsmall_text"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/alibaba_bold"
                        android:textColor="@color/bg_color"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingTop="8dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/wallet_symbol"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="當前縂净值"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_text"
                    android:layout_marginHorizontal="6dp"
                    android:textColor="@color/text_color"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/eye_button"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="30dp"
                    android:src="@drawable/eps_symbol"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.0000"
                    android:paddingHorizontal="5dp"
                    android:id="@+id/tokenAmountText"
                    android:textStyle="bold"
                    android:fontFamily="@font/alibaba_bold"
                    android:textSize="@dimen/heading_text"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="≈ $0.00"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:paddingHorizontal="5dp"
                android:paddingBottom="5dp"
                android:id="@+id/amountText"
                android:textStyle="bold"
                android:fontFamily="@font/alibaba_bold"
                android:textSize="@dimen/sub_heading_text"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.github.sshadkany.RectButton
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:shape_roundRect_backgroundColor="@color/background_color"
                    app:shape_roundRect_bottomLeftRadius="10dp"
                    app:shape_roundRect_bottomRightRadius="10dp"
                    app:shape_roundRect_dark_color="@color/blue_shadow"
                    app:shape_roundRect_light_color="@color/light_shadow"
                    app:shape_roundRect_radius="6dp"
                    android:id="@+id/addEpsButton"
                    app:shape_roundRect_shadow_position_x="3dp"
                    app:shape_roundRect_shadow_position_y="3dp"
                    app:shape_roundRect_shadow_type="drop_shadow"
                    app:shape_roundRect_topLeftRadius="10dp"
                    app:shape_roundRect_topRightRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/blue_gradient">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:text="追加投資"
                            android:textColor="@color/bg_color"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="@dimen/normal_text"/>
                    </LinearLayout>

                </com.github.sshadkany.RectButton>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <com.github.sshadkany.shapes.RoundRectView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shape_roundRect_backgroundColor="@color/background_color"
                    app:shape_roundRect_bottomLeftRadius="10dp"
                    app:shape_roundRect_bottomRightRadius="10dp"
                    app:shape_roundRect_dark_color="@color/dark_shadow"
                    app:shape_roundRect_light_color="@color/light_shadow"
                    app:shape_roundRect_radius="6dp"
                    app:shape_roundRect_shadow_position_x="3dp"
                    app:shape_roundRect_shadow_position_y="3dp"
                    app:shape_roundRect_shadow_type="drop_shadow"
                    app:shape_roundRect_topLeftRadius="10dp"
                    app:shape_roundRect_topRightRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:paddingHorizontal="25dp"
                        android:paddingVertical="25dp"
                        android:layout_marginBottom="10dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/apy_prediction"
                                android:textSize="@dimen/normal_text" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="right"
                                android:text="收益"
                                android:textStyle="bold"
                                android:textSize="@dimen/normal_text" />
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未滾存收益"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:textStyle="bold"
                            android:textSize="@dimen/small_text"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_height="30dp"
                                android:src="@drawable/eps_symbol"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0.0000"
                                android:gravity="center_vertical"
                                android:layout_gravity="center_vertical"
                                android:paddingHorizontal="5dp"
                                android:id="@+id/rewardsAmountText"
                                android:textStyle="bold"
                                android:fontFamily="@font/alibaba_bold"
                                android:textSize="@dimen/heading_text"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="當前年化收益%"
                            android:layout_marginTop="5dp"
                            android:textSize="@dimen/small_text" />
                        <TextView
                            android:id="@+id/apyText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="1150.00%"
                            android:textSize="@dimen/big_heading_text"
                            android:textStyle="bold" />



                        <com.github.sshadkany.RectButton
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginTop="10dp"
                            app:shape_roundRect_bottomLeftRadius="10dp"
                            app:shape_roundRect_bottomRightRadius="10dp"
                            app:shape_roundRect_dark_color="@color/dark_shadow"
                            app:shape_roundRect_light_color="@color/light_shadow"
                            app:shape_roundRect_radius="6dp"
                            android:id="@+id/compoundTimerButton"
                            app:shape_roundRect_shadow_position_x="3dp"
                            app:shape_roundRect_shadow_position_y="3dp"
                            app:shape_roundRect_shadow_type="drop_shadow"
                            app:shape_roundRect_topLeftRadius="10dp"
                            app:shape_roundRect_topRightRadius="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:id="@+id/pendingTimeLayout"
                                android:background="@drawable/blue_gradient">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:id="@+id/pendingTime"
                                    android:text="剩餘 2小時30分鐘"
                                    android:textColor="@color/bg_color"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/normal_text"/>
                            </LinearLayout>
                        </com.github.sshadkany.RectButton>
                    </LinearLayout>
                </com.github.sshadkany.shapes.RoundRectView>



            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.github.sshadkany.shapes.RoundRectView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shape_roundRect_radius="6dp"
                    app:shape_roundRect_bottomLeftRadius="10dp"
                    app:shape_roundRect_bottomRightRadius="10dp"
                    app:shape_roundRect_topLeftRadius="10dp"
                    app:shape_roundRect_topRightRadius="10dp"
                    app:shape_roundRect_shadow_position_x="3dp"
                    app:shape_roundRect_shadow_position_y="3dp"
                    app:shape_roundRect_shadow_type="drop_shadow"
                    app:shape_roundRect_backgroundColor="@color/background_color"
                    app:shape_roundRect_light_color="@color/light_shadow"
                    app:shape_roundRect_dark_color="@color/dark_shadow">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="25dp"
                        android:paddingVertical="25dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/home_lock" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="鎖倉"
                                android:textSize="@dimen/normal_text"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/eps_symbol" />

                            <TextView
                                android:id="@+id/stakedTokenAmountText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/alibaba_bold"
                                android:text="0.0000"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sub_heading_text"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/stakedAmountText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginVertical="5dp"
                            android:fontFamily="@font/alibaba_bold"
                            android:gravity="center_horizontal"
                            android:text="≈ $0.00"
                            android:textSize="@dimen/normal_text" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:id="@+id/headingTab"
                            android:visibility="gone"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:text="No."
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_weight=".1" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".35"
                                android:text="EPS數量"
                                android:gravity="right"

                                android:textSize="@dimen/small_text" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight=".2"
                                android:gravity="right"
                                android:text="資產占比%"
                                android:textSize="@dimen/small_text" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".35"
                                android:gravity="center"
                                android:text="解鎖時間"
                                android:textSize="@dimen/small_text" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/addStakeList"/>
                        <include android:visibility="gone"
                            layout="@layout/template_stake_item" />
                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/downButton"
                            android:visibility="gone"
                            android:src="@drawable/arrow_down_nobg"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </com.github.sshadkany.shapes.RoundRectView>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.github.sshadkany.shapes.RoundRectView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shape_roundRect_radius="6dp"
                    app:shape_roundRect_bottomLeftRadius="10dp"
                    app:shape_roundRect_bottomRightRadius="10dp"
                    app:shape_roundRect_topLeftRadius="10dp"
                    app:shape_roundRect_topRightRadius="10dp"
                    app:shape_roundRect_shadow_position_x="3dp"
                    app:shape_roundRect_shadow_position_y="3dp"
                    app:shape_roundRect_shadow_type="drop_shadow"
                    app:shape_roundRect_backgroundColor="@color/background_color"
                    app:shape_roundRect_light_color="@color/light_shadow"
                    app:shape_roundRect_dark_color="@color/dark_shadow">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="25dp"
                        android:paddingHorizontal="25dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/unlock_str" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="已解鎖"
                                android:textSize="@dimen/normal_text"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/eps_symbol" />

                            <TextView
                                android:id="@+id/stakedTokenAmountText1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/alibaba_bold"
                                android:text="0.0000"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sub_heading_text"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/stakedAmountText1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginVertical="5dp"
                            android:fontFamily="@font/alibaba_bold"
                            android:gravity="center_horizontal"
                            android:text="≈ $0.00"
                            android:textSize="@dimen/normal_text" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <com.github.sshadkany.RectButton
                                android:id="@+id/claimSwapAll"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:layout_marginTop="10dp"
                                app:shape_roundRect_backgroundColor="@color/background_color"
                                app:shape_roundRect_bottomLeftRadius="10dp"
                                app:shape_roundRect_bottomRightRadius="10dp"
                                app:shape_roundRect_dark_color="@color/dark_shadow"
                                app:shape_roundRect_light_color="@color/light_shadow"
                                app:shape_roundRect_radius="6dp"
                                app:shape_roundRect_shadow_position_x="3dp"
                                app:shape_roundRect_shadow_position_y="3dp"
                                app:shape_roundRect_shadow_type="drop_shadow"
                                app:shape_roundRect_topLeftRadius="10dp"
                                app:shape_roundRect_topRightRadius="10dp">

                                <TextView
                                    android:id="@+id/claimSwapText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/alibaba_bold"
                                    android:gravity="center"
                                    android:text="全部提取并兌換"
                                    android:textSize="@dimen/normal_text" />
                            </com.github.sshadkany.RectButton>

                        </RelativeLayout>
                    </LinearLayout>
                </com.github.sshadkany.shapes.RoundRectView>



            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5">

                        <com.github.sshadkany.RectButton
                            android:id="@+id/stopCompounding"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginTop="10dp"
                            app:shape_roundRect_backgroundColor="@color/background_color"
                            app:shape_roundRect_bottomLeftRadius="10dp"
                            app:shape_roundRect_bottomRightRadius="10dp"
                            app:shape_roundRect_dark_color="@color/dark_shadow"
                            app:shape_roundRect_light_color="@color/light_shadow"
                            app:shape_roundRect_radius="6dp"
                            app:shape_roundRect_shadow_position_x="3dp"
                            app:shape_roundRect_shadow_position_y="3dp"
                            app:shape_roundRect_shadow_type="drop_shadow"
                            app:shape_roundRect_topLeftRadius="10dp"
                            app:shape_roundRect_topRightRadius="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:fontFamily="@font/alibaba_bold"
                                android:gravity="center"
                                android:text="關閉複利滾動"
                                android:textSize="@dimen/normal_text" />
                        </com.github.sshadkany.RectButton>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5">

                        <com.github.sshadkany.RectButton
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginTop="10dp"
                            app:shape_roundRect_backgroundColor="@color/background_color"
                            app:shape_roundRect_bottomLeftRadius="10dp"
                            app:shape_roundRect_bottomRightRadius="10dp"
                            app:shape_roundRect_dark_color="@color/dark_shadow"
                            app:shape_roundRect_light_color="@color/light_shadow"
                            app:shape_roundRect_radius="6dp"
                            app:shape_roundRect_shadow_position_x="3dp"
                            app:shape_roundRect_shadow_position_y="3dp"
                            app:shape_roundRect_shadow_type="drop_shadow"
                            app:shape_roundRect_topLeftRadius="10dp"
                            android:id="@+id/exitStrategy"
                            app:shape_roundRect_topRightRadius="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_centerInParent="true"
                                android:textSize="@dimen/normal_text"
                                android:fontFamily="@font/alibaba_bold"
                                android:text="退出當前策略"/>
                        </com.github.sshadkany.RectButton>


                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"/>
        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>