<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WhaleTrust.SendToAddressActivity">
    <com.github.sshadkany.shapes.CircleView
        android:id="@+id/backButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shape_circle_radius="4dp"
        app:shape_circle_shadow_position_y="4dp"
        app:shape_circle_shadow_position_x="4dp"
        app:shape_circle_dark_color="@color/dark_shadow"
        app:shape_circle_light_color="@color/light_shadow"
        app:shape_circle_borderColor="#ECF0F3"
        app:shape_circle_borderWidth="1dp"
        app:shape_circle_backgroundColor="@color/background_color"
        app:shape_circle_shadow_type="drop_shadow">
        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_gravity="center"
            android:src="@drawable/back_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </com.github.sshadkany.shapes.CircleView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/backButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="發送代幣"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/heading_text"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/pass_setting_card_lg"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginHorizontal="25dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight=".7"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textSize="@dimen/normal_text"
                        android:id="@+id/addressEditText"
                        android:hint="接收者地址"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight=".1"
                        android:layout_height="25dp"
                        android:adjustViewBounds="true"
                        android:id="@+id/scanQrCodeButton"
                        android:src="@drawable/scan_image"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".2"
                        android:layout_marginLeft="5dp"
                        android:textSize="@dimen/small_text"
                        android:textColor="@color/text_color_blue"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:id="@+id/pasteAddressButton"
                        android:layout_height="wrap_content"
                        android:text="粘貼"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/pass_setting_card_lg"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginHorizontal="25dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight=".8"
                        android:textSize="@dimen/normal_text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:digits="1234567890."
                        android:inputType="phone"
                        android:id="@+id/amountEditText"
                        android:hint="數量"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".2"
                        android:layout_marginLeft="5dp"
                        android:textSize="@dimen/small_text"
                        android:textColor="@color/text_color_blue"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:id="@+id/maxAmountButton"
                        android:layout_height="wrap_content"
                        android:text="最大"/>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="≈$0.00"
                    android:id="@+id/approxAmountUSD"
                    android:textSize="@dimen/small_text"
                    android:layout_weight=".4"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:text="剩餘 0.020481348 BNB"
                    android:layout_weight=".6">
                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="right"
                        android:textSize="@dimen/small_text"
                        android:layout_height="wrap_content"
                        android:text="剩餘 "
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="right"
                        android:textSize="@dimen/small_text"
                        android:id="@+id/tokenBalance"
                        android:layout_height="wrap_content"
                        android:text="0 BNB"
                        />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingBottom="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/continueButton"
                android:src="@drawable/blue_square_button"
                android:adjustViewBounds="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="下一步"
                android:textSize="@dimen/small_text"
                android:textColor="@color/bg_color"
                android:gravity="center"
                android:textStyle="bold"
                />
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>