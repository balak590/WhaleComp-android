<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.github.sshadkany.RectButton
        android:layout_width="match_parent"
        android:id="@+id/txCardDetail"
        android:layout_height="70dp"
        app:shape_roundRect_backgroundColor="@color/background_color"
        app:shape_roundRect_bottomLeftRadius="10dp"
        app:shape_roundRect_bottomRightRadius="10dp"
        app:shape_roundRect_dark_color="@color/dark_shadow"
        app:shape_roundRect_light_color="@color/light_shadow"
        app:shape_roundRect_radius="2dp"
        app:shape_roundRect_shadow_position_x="2dp"
        app:shape_roundRect_shadow_position_y="2dp"
        app:shape_roundRect_shadow_type="drop_shadow"
        app:shape_roundRect_topLeftRadius="10dp"
        app:shape_roundRect_topRightRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:layout_weight=".1"
                android:src="@drawable/receive_funds_tx"
                android:id="@+id/txStatusImage"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".55"
                android:paddingLeft="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="已發送"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:id="@+id/statusText"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="To:1257...1828"
                    android:id="@+id/toAddressText"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0.001 BNB"
                android:id="@+id/bnbGasFee"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="right"
                android:layout_weight=".3"/>
        </LinearLayout>
    </com.github.sshadkany.RectButton>


</RelativeLayout>