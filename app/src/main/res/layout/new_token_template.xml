<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.github.sshadkany.RectButton
        android:id="@+id/tokenDetails"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:shape_roundRect_backgroundColor="@color/background_color"
        app:shape_roundRect_bottomLeftRadius="10dp"
        app:shape_roundRect_bottomRightRadius="10dp"
        app:shape_roundRect_dark_color="@color/dark_shadow"
        app:shape_roundRect_light_color="@color/light_shadow"
        app:shape_roundRect_radius="2dp"
        app:shape_roundRect_shadow_position_x="2dp"
        app:shape_roundRect_shadow_position_y="2dp"
        app:shape_roundRect_shadow_type="drop_shadow"
        app:shape_roundRect_topLeftRadius="10dp"
        app:shape_roundRect_topRightRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:paddingHorizontal="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:layout_height="25dp"
                android:id="@+id/tokenImage"
                android:adjustViewBounds="true"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".6"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text"
                android:id="@+id/tokenBalance"
                android:layout_height="wrap_content"
                android:text="0.0000"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="25dp"
                android:layout_marginRight="5dp"
                android:textSize="@dimen/xsmall_text"
                android:gravity="center_vertical|right"
                android:adjustViewBounds="true"
                android:id="@+id/tokenBalanceUSD"
                android:text="â‰ˆ$0.00"/>
        </LinearLayout>
    </com.github.sshadkany.RectButton>


</RelativeLayout>